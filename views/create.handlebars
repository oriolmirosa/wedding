<main style="background-color: #fff;">
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-3"></div>
			<div class="col-md-6">
				<div class="panel panel-default" style="border-color: #1c1c1c; margin-top: 50px;">
					<div class="panel-heading" style="line-height: 1em;">
						<h3 class="panel-title" style="text-align: center;">Form to enter new registry items</h3>
					</div>
					<form role="form" method="post" action="/createItem" enctype="multipart/form-data">
						<div class="panel-body form-horizontal">
							<div class="form-group col-md-12">
			    				<label class="col-md-2" for="itemEn">Item (en):</label>
			    				<div class="col-md-10">
			    					<input type="text" name="itemEn" class="form-control">
			    				</div>
			    			</div>
			    			<div class="form-group col-md-12">
			    				<label class="col-md-2" for="itemCa">Item (ca):</label>
			    				<div class="col-md-10">
			    					<input type="text" name="itemCa" class="form-control">
			    				</div>
			    			</div>
			    			<div class="form-group col-md-12">
			    				<label class="col-md-2" for="descriptionEn">Description (en):</label>
			    				<div class="col-md-10">
			    					<textarea name="descriptionEn" class="form-control"></textarea>
			    				</div>
			    			</div>
			    			<div class="form-group col-md-12">
			    				<label class="col-md-2" for="descriptionCa">Description (ca):</label>
			    				<div class="col-md-10">
			    					<textarea name="descriptionCa" class="form-control"></textarea>
			    				</div>
			    			</div>
			    			<div class="form-group col-md-12">
			    				<label class="col-md-2" for="price">Price:</label>
			    				<div class="col-md-10">
			    					<input type="number" name="price" class="form-control">
			    				</div>
			    			</div>
							<div class="form-group col-md-12">
			    				<label class="col-md-2" for="item">Remaining:</label>
			    				<div class="col-md-10">
			    					<input type="number" name="remaining" class="form-control">
			    				</div>
			    			</div>
			    			<div class="form-group col-md-12">
								<label class="col-sm-2" for="file">Image:</label>
								<div class="col-md-10">
									<input class="form-control" type="file" name="file" id="file">
								</div>
							</div>
			    			<button type="submit" class="btn btn-default pull-right" id="btn-create" style="text-align: center; 70px; padding-top: 6px; padding-bottom: 2px; border-color: #fff; background-color: #1c1c1c; border-radius: 0px; color: #fff; font-size: 12px; margin-right: 15px;">Create</button>
						</div>
					</form>
				</div>

				{{#each items}}
				<div class="panel panel-default" style="border-color: #1c1c1c; margin-top: 50px;">
					<div class="panel-heading" style="line-height: 1em;">
						<h3 class="panel-title" style="text-align: center;">Edit item registry number {{@index}}</h3>
					</div>
					<form role="form" method="post" action="/updateitem" enctype="multipart/form-data">
						<div class="panel-body form-horizontal">
							<div class="form-group col-md-12">
			    				<label class="col-md-2" for="id">Id:</label>
			    				<div class="col-md-10">
			    					<input type="text" name="id" class="form-control" value="{{_id}}" readonly>
			    				</div>
			    			</div>
							<div class="form-group col-md-12">
			    				<label class="col-md-2" for="itemEn">Item (en):</label>
			    				<div class="col-md-10">
			    					<input type="text" name="itemEn" class="form-control" value="{{item.en}}">
			    				</div>
			    			</div>
			    			<div class="form-group col-md-12">
			    				<label class="col-md-2" for="itemCa">Item (ca):</label>
			    				<div class="col-md-10">
			    					<input type="text" name="itemCa" class="form-control" value="{{item.ca}}">
			    				</div>
			    			</div>
			    			<div class="form-group col-md-12">
			    				<label class="col-md-2" for="descriptionEn">Description (en):</label>
			    				<div class="col-md-10">
			    					<textarea name="descriptionEn" id="descriptionEn" class="form-control">{{description.en}}</textarea>
			    				</div>
			    			</div>
			    			<div class="form-group col-md-12">
			    				<label class="col-md-2" for="descriptionCa">Description (ca):</label>
			    				<div class="col-md-10">
			    					<textarea name="descriptionCa" id="descriptionCa" class="form-control">{{description.ca}}</textarea>
			    				</div>
			    			</div>
			    			<div class="form-group col-md-12">
			    				<label class="col-md-2" for="price">Price:</label>
			    				<div class="col-md-10">
			    					<input type="number" name="price" id="price" class="form-control" value="{{price}}">
			    				</div>
			    			</div>
							  <div class="form-group col-md-12">
			    				<label class="col-md-2" for="remaining">Remaining:</label>
			    				<div class="col-md-10">
			    					<input type="number" name="remaining" id="remaining" class="form-control" value="{{remaining}}">
			    				</div>
			    			</div>
                <div class="form-group col-md-12">
			    				<label class="col-md-2" for="file">Image:</label>
			    				<div class="col-md-10">
                    <label for="file">Current file: {{filename}}</label>
			    					<input type="file" name="file" id="file" class="form-control">
			    				</div>
			    			</div>
			    			<button type="submit" class="btn btn-default pull-right" id="btn-update" style="text-align: center; 70px; padding-top: 6px; padding-bottom: 2px; border-color: #fff; background-color: #1c1c1c; border-radius: 0px; color: #fff; font-size: 12px; margin-right: 15px;">Update</button>
			    			<button type="submit" class="btn btn-default pull-right" id="btn-delete" formaction="/deleteitem" style="text-align: center; 70px; padding-top: 6px; padding-bottom: 2px; border-color: #fff; background-color: #1c1c1c; border-radius: 0px; color: #fff; font-size: 12px; margin-right: 15px;">Delete</button>
						</div>
					</form>
				</div>
				{{/each}}
			</div>
			<div class="col-md-3"></div>
		</div>
	</div>
</main>
